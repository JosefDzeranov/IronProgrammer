@model IEnumerable<IronProgrammer.Models.EF.Problem>

@{
    ViewBag.Title = "Problems";
}

<h2>Problems</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeProblemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplexityId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TypeProblemId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ComplexityId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
